@model ResultsViewModel

@{
  var prevPageIndex = Model.Courses.PageIndex - 1;
  var nextPageIndex = Model.Courses.PageIndex + 1;
}

<nav class="pub-c-pagination" role="navigation" aria-label="Pagination">
  <ul class="pub-c-pagination__list">
    @if (Model.Courses.HasPreviousPage)
    {
      <li class="pub-c-pagination__item pub-c-pagination__item--previous">
        <a href='@Url.Action("Index", "Results", Model.FilterModel.WithPage(prevPageIndex).ToRouteValues())'
           class="pub-c-pagination__link"
           rel="prev"
           aria-label="Go to page @prevPageIndex of @Model.Courses.TotalPages">
          <span class="pub-c-pagination__link-title">
            <svg class="pub-c-pagination__link-icon" xmlns="http://www.w3.org/2000/svg" height="13" width="17" viewBox="0 0 17 13">
              <path fill="currentColor" d="m6.5938-0.0078125-6.7266 6.7266 6.7441 6.4062 1.377-1.449-4.1856-3.9768h12.896v-2h-12.984l4.2931-4.293-1.414-1.414z"></path>
            </svg>
            Previous page
          </span>
            <span class="govuk-visually-hidden">:</span>
            <span class="pub-c-pagination__link-label">@prevPageIndex of @Model.Courses.TotalPages</span>
        </a>
      </li>
    }
    @if (Model.Courses.HasNextPage) {
      <li class="pub-c-pagination__item pub-c-pagination__item--next">
        <a href='@Url.Action("Index", "Results", Model.FilterModel.WithPage(nextPageIndex).ToRouteValues())'
           class="pub-c-pagination__link"
           rel="next"
           aria-label="Go to page @nextPageIndex of @Model.Courses.TotalPages">
          <span class="pub-c-pagination__link-title">
            Next page
            <svg class="pub-c-pagination__link-icon" xmlns="http://www.w3.org/2000/svg" height="13" width="17" viewBox="0 0 17 13">
              <path fill="currentColor" d="m10.107-0.0078125-1.4136 1.414 4.2926 4.293h-12.986v2h12.896l-4.1855 3.9766 1.377 1.4492 6.7441-6.4062-6.7246-6.7266z"></path>
            </svg>
          </span>
            <span class="govuk-visually-hidden">:</span>
            <span class="pub-c-pagination__link-label">@nextPageIndex of @Model.Courses.TotalPages</span>
        </a>
      </li>
    }
  </ul>
</nav>
