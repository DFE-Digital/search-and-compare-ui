@model ResultsFilter

@{
  ViewBag.Title = $"Filter by qualification";
}

@Html.Partial("Back", new BackLinkViewModel { Href = Url.Action("Index", "Results", Model.ToRouteValues()), Title = "Back to search results"})

<main class="govuk-main-wrapper" id="main-content" role="main">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action='@Url.Action("StudyType", "Filter", Model.ToRouteValues())' method="POST">
        <fieldset role="radiogroup" aria-required="true" class="govuk-fieldset">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
            <h1 class="govuk-heading-xl">What qualifications do you want?</h1>
          </legend>

          <div class="govuk-form-group">
            <div class="govuk-checkboxes">
              <div class="govuk-checkboxes__item">
                <input id="applyFilter-qts-only" class="govuk-checkboxes__input" type="checkbox" name="qts-only" value="true"
                
                @{ /* FIXME */ }
                checked="true"
                
                >
                <label for="applyFilter-qts-only" class="govuk-label govuk-checkboxes__label">
                  <span class="govuk-!-font-weight-bold govuk-!-margin-bottom-2 govuk-!-display-block">
                    QTS only
                  </span>
                  <span>
                    QTS (qualified teacher status)
                  </span>
                </label>
              </div>

              <div class="govuk-checkboxes__item">
                <input id="applyFilter-pgce-pgde-with-qts" class="govuk-checkboxes__input" type="checkbox" name="pgce-pgde-with-qts" value="true"
                
                @{ /* FIXME */ }
                checked="true"
                
                >
                <label for="applyFilter-pgce-pgde-with-qts" class="govuk-label govuk-checkboxes__label">
                  <span class="govuk-!-font-weight-bold govuk-!-margin-bottom-2 govuk-!-display-block">
                    PGCE (or PGDE) with QTS
                  </span>
                  <span>
                    PGCE (postgraduate certificate in education) or PGDE (postgraduate diplona in education) with QTS
                  </span>
                </label>
              </div>

              <div class="govuk-checkboxes__item">
                <input id="applyFilter-other" class="govuk-checkboxes__input" type="checkbox" name="other" value="true"
                
                @{ /* FIXME */ }
                checked="true"
                
                >
                <label for="applyFilter-other" class="govuk-label govuk-checkboxes__label">
                  <span class="govuk-!-font-weight-bold govuk-!-margin-bottom-2 govuk-!-display-block">
                    Other
                   </span>
                  <span>
                    QTLS, QTLS with PGCE or PGDE
                  </span>
                </label>
              </div>
            </div>
          </div>
        </fieldset>

        <input type="hidden" name="qts-only" value="false">
        <input type="hidden" name="pgce-pgde-with-qts" value="false">
        <input type="hidden" name="other" value="false">

        <div class="govuk-form-group">
          <input class="govuk-button" type="submit" value="Find courses">
        </div>
      </form>
    </div>
  </div>
</main>
