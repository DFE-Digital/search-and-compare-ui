@model ResultsFilter

@{
  ViewBag.Title = $"Filter by qualification";
}

@Html.Partial("Back", new BackLinkViewModel { Href = Url.Action("Index", "Results", Model.ToRouteValues()), Title = "Back to search results"})

<main class="govuk-main-wrapper" id="main-content" role="main">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action='@Url.Action("StudyType", "Filter", Model.ToRouteValues())' method="POST">
        <fieldset role="radiogroup" aria-required="true" class="govuk-fieldset">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
            <h1 class="govuk-heading-xl">What qualifications do you want?</h1>
          </legend>

          <div class="govuk-form-group">
            <div class="govuk-checkboxes">
              <div class="govuk-checkboxes__item">
                <input id="applyFilter-qts-only" class="govuk-checkboxes__input" type="checkbox" name="qualification" value="@QualificationOption.QtsOnly" checked="@Model.qualification.Any(x => x == QualificationOption.QtsOnly)">
                <label for="applyFilter-qts-only" class="govuk-label govuk-checkboxes__label">
                  <span class="govuk-!-font-weight-bold govuk-!-margin-bottom-2 govuk-!-display-block">
                    QTS only
                  </span>
                  <p class="govuk-body">
                    QTS (qualified teacher status) allows you to teach in state schools in
                    England. If you want to teach in the rest of the UK or internationally,
                    consider a &lsquo;PGCE (or PGDE) with QTS&rsquo; qualification instead.
                  </p>
                </label>
              </div>

              <div class="govuk-checkboxes__item">
                <input id="applyFilter-pgce-pgde-with-qts" class="govuk-checkboxes__input" type="checkbox" name="qualification" value="@QualificationOption.PgdePgceWithQts" checked="@Model.qualification.Any(x => x == QualificationOption.PgdePgceWithQts)">
                <label for="applyFilter-pgce-pgde-with-qts" class="govuk-label govuk-checkboxes__label">
                  <span class="govuk-!-font-weight-bold govuk-!-margin-bottom-2 govuk-!-display-block">
                    PGCE (or PGDE) with QTS
                  </span>
                  <p class="govuk-body">
                    A PGCE (postgraduate certificate in education) with QTS (qualified
                    teacher status) allows you to teach in England, Scotland, Wales and
                    Northern Ireland. This qualification is also recognised internationally.
                  </p>
                  <p class="govuk-body">
                    Many PGCE courses include credits that count towards a Master&lsquo;s
                    degree. A PGDE (postgraduate diploma in education) is equivalent to a
                    PGCE but awards more Master&lsquo;s credits.
                  </p>
                </label>
              </div>

              <div class="govuk-checkboxes__item">
                <input id="applyFilter-other" class="govuk-checkboxes__input" type="checkbox" name="qualification" value="@QualificationOption.Other" checked="@Model.qualification.Any(x => x == QualificationOption.Other)">
                <label for="applyFilter-other" class="govuk-label govuk-checkboxes__label">
                  <span class="govuk-!-font-weight-bold govuk-!-margin-bottom-2 govuk-!-display-block">
                    Further Education (PGCE or PGDE without QTS)
                   </span>
                  <span>
                    To teach further education you don't need QTS. Instead you can study
                    for a PGCE or PGDE without QTS.
                  </span>
                </label>
              </div>
            </div>
          </div>
        </fieldset>

        <div class="govuk-form-group">
          <input class="govuk-button" type="submit" value="Find courses">
        </div>
      </form>
    </div>
  </div>
</main>
