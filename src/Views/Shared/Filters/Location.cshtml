@model QueryFilter

@* https://www.gov.uk/search *@

<div class="filter-form">
    <div class="inner-block">
        <div class="filter checkbox-filter js-openable-filter" tabindex="0">
            <div class="head">
                <span class="legend">Location</span>
                @*<div class="controls">
                    <a class="clear-selected js-hidden">Remove filters</a>
                    <div class="toggle"></div>
                </div>*@
            </div>
            <div class="checkbox-container checkbox-container-noscroll" id="location-filter">
                    @if(Model.Coordinates != null && Model.RadiusOption != null) {
                        <ul><li>@Model.rad miles around @Model.loc</li></ul>
                    } else {
                        <ul><li>Across England</li></ul>
                    }
                </ul>
            </div>
            <div class="filter-change">
            <a href='@Url.Action("Location", "Filter", Model.ToRouteValues())'
               class="link">Change location</a>
            </div>
        </div>

      @*<div class="submit js-live-search-fallback">
        <button class="pub-c-button">Submit filters</button>
      </div>*@
    </div>
  </div>