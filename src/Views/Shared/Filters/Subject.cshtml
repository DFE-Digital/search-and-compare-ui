@model ResultsViewModel

@* https://www.gov.uk/search *@

<div class="filter-form">
    <div class="inner-block">
        <div class="filter checkbox-filter js-openable-filter">
            <div class="head legend" role="term">
                Subject<span class="visually-hidden">:</span>
            </div>
            <div class="checkbox-container checkbox-container-noscroll" id="subject-filter" role="definition">
                @if (Model.Subjects.Count() > 4) {
                    <text>@string.Join(", ", Model.Subjects.OrderBy(x=>x.Name).Take(4).Select(x => x.Name)) <br>and @(Model.Subjects.Count() - 4) more&hellip;</text>
                } else {
                    <text>@string.Join(", ", Model.Subjects.OrderBy(x=>x.Name).Select(x=>x.Name))</text>
                }
            </div>
            <div class="filter-change">
            <a href='@Url.Action("Subject", "Filter", Model.FilterModel.ToRouteValues())'
               class="link">Change subjects</a>
            </div>
        </div>
    </div>
  </div>