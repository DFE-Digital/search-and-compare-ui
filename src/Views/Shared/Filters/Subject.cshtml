@model ResultsViewModel

@* https://www.gov.uk/search *@

<div class="filter-form">
    <div class="inner-block">
        <div class="filter checkbox-filter js-openable-filter" tabindex="0">
            <div class="head">
                <span class="legend">Subject</span>
                @*<div class="controls">
                    <a class="clear-selected js-hidden">Remove filters</a>
                    <div class="toggle"></div>
                </div>*@
            </div>
            <div class="checkbox-container checkbox-container-noscroll" id="subject-filter">
                @if (Model.Subjects.Count() > 4) {
                    <span>@string.Join(", ", Model.Subjects.OrderBy(x=>x.Name).Take(4).Select(x => x.Name)) <br>and @(Model.Subjects.Count() - 4) more&hellip;</span>
                } else {
                    <span>@string.Join(", ", Model.Subjects.OrderBy(x=>x.Name).Select(x=>x.Name))</span>
                }
            </div>
            <div class="filter-change">
            <a href='@Url.Action("Subject", "Filter", Model.FilterModel.ToRouteValues())'
               class="link">Change subjects</a>
            </div>
        </div>

      @*<div class="submit js-live-search-fallback">
        <button class="pub-c-button">Submit filters</button>
      </div>*@
    </div>
  </div>